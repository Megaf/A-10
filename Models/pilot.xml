<?xml version="1.0"?>

<PropertyList>

	<name>pilot</name>
	<path>pilot.ac</path>

	<!-- De-select when in view 0 -->
	<animation>
		<type>select</type>
		<object-name>Pilot</object-name>
		<condition>
			<not>
				<equals>
					<property>sim/current-view/view-number</property>
					<value>0</value>
				</equals>
			</not>
		</condition>
	</animation>
	<!--Ejection-->
	<animation>
		<type>select</type>
		<object-name>Pilot</object-name>
		<object-name>seat</object-name>
		<condition>
			<not>
				<property>A-10/done</property>
			</not>
		</condition>
	</animation>

</PropertyList>
